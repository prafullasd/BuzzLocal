<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffa900"
    android:layout_margin="6dip"
    android:padding="6dip" >

    <TextView
        android:id="@+id/buzzText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="Despite a million requests, the ancient art of multitasking remains to be a great milestone in the history of humanity in the context of a debate round that basically necessitates the truth to be a revival of the independent matters that entail the happiness of the people who do not or will not abide by the laws established by the resolution"
        android:textSize="16sp"
        android:textColor="#000000" />
	<TextView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="6dip"
        android:singleLine="true"
        android:text="__________________________________________________________________________________________________________________________________________________________________________________________"
        android:textSize="5sp" 
		android:textColor="#000000" />
	<TextView
        android:id="@+id/gap"
        android:layout_width="match_parent"
        android:layout_height="4dip"
        android:singleLine="true"
        android:textSize="5sp" />
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <TextView
	        android:id="@+id/date"
	        android:layout_width="match_parent"
	        android:layout_height="14dip"
	        android:singleLine="true"
	        android:text="June 4th, 2012"
	        android:textSize="12sp"
	        android:textColor="#000000" />

	</LinearLayout> 
</LinearLayout>