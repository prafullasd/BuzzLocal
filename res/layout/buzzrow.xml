<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dip"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="6dip" >

    <TextView
        android:id="@+id/buzzText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="Stub text"
        android:textSize="16sp"
        android:textColor="#000000" />
	<TextView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="6dip"
        android:singleLine="true"
        android:text="__________________________________________________________________________________________________________________________________________________________________________________________"
        android:textSize="5sp" 
		android:textColor="#808080" />
	<TextView
        android:id="@+id/gap"
        android:layout_width="match_parent"
        android:layout_height="4dip"
        android:singleLine="true"
        android:textSize="5sp" />

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="right"
	    android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/date"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:singleLine="true"
	        android:text="June 4th, 2012"
	        android:textColor="#000000"
	        android:textSize="12sp" />
	<ImageView
	    android:id="@+id/icon"
	    android:layout_width="14dip"
	    android:layout_height="14dip"
	    android:layout_alignBottom="@+id/date"
	    android:layout_alignParentTop="true"
	    android:layout_toRightOf="@id/date"
	    android:contentDescription="TODO"
	    android:src="@drawable/upvoteicon" />

	 <TextView
	     android:id="@+id/upvotes"
	     android:layout_width="wrap_content"
	     android:layout_height="14dip"
	     android:layout_toRightOf="@id/icon"
	     android:singleLine="true"
	     android:text="1000"
	     android:textColor="#000000"
	     android:textSize="12sp" />
 	<TextView
	        android:id="@+id/gap2"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_toRightOf="@+d/upvotes"
	        android:singleLine="true"
	        android:text="   "
	        android:textSize="12sp"
	        android:textColor="#000000" />


	</RelativeLayout>
 
</LinearLayout>
